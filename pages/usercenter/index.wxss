page {
  background-color: #f5f5f5;
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  overflow-y: auto;
}

.user-center {
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  width: 100%;
  background: #f5f5f5;
}

/* 用户信息区域 */
.user-info {
  width: 100%;
  background-color: transparent;
  padding: 0;
  margin-bottom: 0;
  box-sizing: border-box;
}

.custom-avatar-class {
  width: 128rpx !important;
  height: 128rpx !important;
  border-radius: 50% !important;
  border: 4rpx solid #fff !important;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1) !important;
}

.custom-name-class {
  font-size: 32rpx !important;
  font-weight: normal !important;
  color: #ffffff !important;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important;
}

.custom-phone-class {
  font-size: 24rpx !important;
  color: #ffffff !important;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5) !important;
  margin-top: 8rpx !important;
}

/* 账户信息 */
.account-info {
  width: calc(100% - 48rpx);
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  margin: -80rpx 24rpx 16rpx;
  position: relative;
  z-index: 2;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  text-align: center;
  flex: 1;
  position: relative;
}

.info-item:not(:last-child):after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 60%;
  width: 1px;
  background-color: #f0f0f0;
}

.amount {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999999;
}

/* 订单区域 */
.order-group {
  width: calc(100% - 48rpx);
  background-color: #fff;
  padding: 24rpx;
  margin: 16rpx 24rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.order-group-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 16rpx;
}

.order-group-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.order-group-all {
  display: flex;
  align-items: center;
  color: #999999;
  font-size: 26rpx;
}

.order-group-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.order-item text {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
}

/* 功能列表 */
.menu-group {
  width: calc(100% - 48rpx);
  background-color: #fff;
  margin: 16rpx 24rpx;
  box-sizing: border-box;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.t-cell {
  padding: 32rpx 24rpx !important;
  position: relative;
}

.t-cell:not(:last-child):after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 24rpx;
  right: 24rpx;
  height: 1px;
  background-color: #f5f5f5;
}

.t-cell__title {
  font-size: 28rpx !important;
  color: #333333 !important;
}

.t-cell__left-icon {
  color: #666666 !important;
}

/* 弹窗样式 */
.popup-content {
  background: #f5f5f5;
  margin-bottom: env(safe-area-inset-bottom);
  border-radius: 16rpx 16rpx 0 0;
}

.popup-title {
  background: #fff;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  height: 112rpx;
  line-height: 112rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.popup-phone {
  background: #fff;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

.popup-close {
  background: #fff;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  margin-top: 16rpx;
}

.content-wrapper {
  margin-top: 340rpx;
  position: relative;
  padding: 0 30rpx;
}

.main-content {
  height: 500rpx;
}

.order-group-wrapper {
  margin-bottom: 16rpx;
}

.order-group-note {
  font-size: 28rpx;
}

.cell-box {
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.icon-color {
  color: #aaa;
}
.cell-class {
  height: 100rpx;
  display: flex;
  align-items: center;
}

.order-content {
  overflow: hidden;
  width: 100%;
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
}

.order-content-box {
  margin: auto;
  position: absolute;
  width: 100%;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}
.order-content-t {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #333;
  letter-spacing: 0;
  text-align: center;
}

.my-order {
  border-radius: 10rpx;
}

.footer__version {
  text-align: center;
  margin-top: 50rpx;
  color: #999;
  margin-bottom: 4rpx;
  font-size: 24rpx;
  line-height: 32rpx;
}
.cell-box .order-group__left {
  margin-right: 0;
}
.cell-box .t-cell-padding {
  padding: 24rpx 18rpx 24rpx 32rpx;
}
