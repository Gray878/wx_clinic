.user-center-card {
  width: 100%;
  background: transparent;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  border-radius: 0;
  padding: 0;
}

.user-center-card__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.background-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.user-center-card__header {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  z-index: 1;
  padding: 100rpx 40rpx 160rpx;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin-right: 24rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.nickname-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.user-center-card__icon {
  position: relative;
  z-index: 1;
  color: #fff;
}

/* 会员标签样式 */
.member-tag {
  font-size: 22rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  padding: 4rpx 16rpx;
  display: inline-block;
  max-width: fit-content;
}
