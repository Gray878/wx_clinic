:host {
  background-color: #f5f5f5;
}
page view {
  box-sizing: border-box;
}
.person-info {
  padding: 30rpx;
  background: #fff;
}

.person-info__btn {
  width: 100%;
  border: 2rpx solid #ddd;
  border-radius: 48rpx;
  padding: 18rpx 0;
  display: flex;
  align-self: center;
  justify-content: center;
}
.person-info__wrapper {
  width: 100%;
  padding: 0 32rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  position: absolute;
  bottom: 0;
  left: 0;
}

.avatarUrl {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50% !important;
  overflow: hidden;
}

.t-class-confirm {
  color: #fa550f !important;
}

.person-info .order-group__left {
  margin-right: 0;
}
.person-info .t-cell-class {
  height: 112rpx;
}

.avatar-section, .nickname-section, .phone-section, .bg-image-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  background: none;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.nickname-input {
  flex: 1;
  text-align: right;
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 0;
}

.bg-image-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
}

.bg-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.edit-text {
  font-size: 24rpx;
  color: #999;
}

.phone-input {
  width: 100%;
  height: 88rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.btn-wrapper {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #26a69a;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: none;
}

.save-btn::after {
  border: none;
}

.save-btn:active {
  opacity: 0.9;
}

/* 手机号区域样式 */
.phone-section {
  margin: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

/* 性别选择区域样式 */
.gender-section {
  margin: 30rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.gender-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.gender-text {
  font-size: 32rpx;
  color: #333;
}

.avatar-section, .nickname-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #f5f5f5;
}
