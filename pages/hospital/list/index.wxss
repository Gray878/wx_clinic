page {
  background-color: #f5f5f5;
}

.hospital-list-container {
  padding-bottom: 30rpx;
}

/* 城市选择栏 */
.city-selection {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 20rpx 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.city-list {
  display: flex;
  flex-wrap: nowrap;
  white-space: nowrap;
  overflow-x: auto;
  gap: 20rpx;
  padding-bottom: 10rpx;
}

.city-list::-webkit-scrollbar {
  display: none;
}

.city-item {
  padding: 14rpx 40rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  border: 1px solid #e0e0e0;
  display: inline-block;
}

.city-item.active {
  background-color: #e8f3f1;
  color: #26a69a;
  border-color: #26a69a;
}

/* 医院列表 */
.hospital-list-section {
  margin: 20rpx 0;
  background-color: #fff;
}

.list-title {
  padding: 30rpx 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.count-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.hospital-list {
  padding: 0 24rpx;
}

.hospital-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.hospital-item:last-child {
  border-bottom: none;
}

.hospital-avatar-container {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}

.hospital-avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hospital-info {
  flex: 1;
}

.hospital-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.hospital-rating {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.rating-stars {
  display: flex;
  margin-left: 8rpx;
}

.hospital-location {
  font-size: 26rpx;
  color: #999;
}

.navigation-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  background-color: #fff;
  margin-top: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin: 30rpx 0;
} 