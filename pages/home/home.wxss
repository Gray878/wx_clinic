page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
  background-color: #f5f5f5;
}

.home-page {
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 页面标题 */
.page-title {
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx 24rpx 10rpx;
  color: #333;
}

/* 通知栏样式 */
.notice-bar {
  padding: 0 24rpx;
  margin: 8rpx 0 16rpx;
}

.notice-bar__inner {
  margin: 0 !important;
  background-color: #f0f9ff !important;
  border-radius: 8rpx !important;
  display: flex;
  align-items: center;
  height: 60rpx !important;
  padding: 0 14rpx !important;
}

.notice-bar__content {
  color: rgba(69, 69, 69, 0.7);
  font-size: 26rpx !important;
  line-height: 1.2 !important;
}

/* 轮播图样式 */
.swiper-wrap {
  padding: 0 24rpx;
  margin-bottom: 20rpx;
}

.swiper-container {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-item-wrap {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper-item {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.swiper-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 24rpx;
  background: rgba(69, 69, 69, 0.3);
  color: #fff;
  font-size: 28rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

/* 城市选择区域 */
.city-selection {
  padding: 20rpx 24rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.city-scroll-view {
  white-space: nowrap;
  width: 100%;
  height: 90rpx;
}

.city-item {
  display: inline-block;
  padding: 14rpx 50rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
  border: 1px solid #e0e0e0;
  margin-right: 20rpx;
}

.city-item.active {
  background-color: #e8f3f1;
  color: #26a69a;
  border-color: #26a69a;
}

/* 服务选择区域 */
.service-selection {
  padding: 15rpx 24rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.service-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.service-row {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}

.service-item {
  flex: 1;
  height: 160rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  position: relative;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.service-item.empty {
  background-color: transparent;
  box-shadow: none;
}

.service-icon {
  width: 90rpx;
  height: 90rpx;
  margin-right: 24rpx;
}

.service-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
}

.service-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 商品列表区域 */
.goods-section {
  margin-top: 20rpx;
  padding: 15rpx 24rpx;
  background-color: #fff;
}

.goods-list-container {
  margin-top: 10rpx !important;
  background-color: #fff !important;
}

/* 保留原有样式 */
.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.home-page-container .t-tabs {
  background: #f5f5f5 !important;
}

.home-page-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.home-page-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.home-page-container .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}
.home-page-container .tab .order-nav-item.active {
  color: #fa550f !important;
}

.home-page-container .tab .bottom-line {
  border-radius: 4rpx;
}

.home-page-container .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.home-page-container .tabs-external__item {
  font-size: 28rpx;
}

.home-page-container .tabs-external__active {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .tabs-external__track {
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

.home-page-tabs {
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: red;
}

/* 三甲医院列表样式 */
.hospital-section {
  padding: 15rpx 24rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-more {
  font-size: 28rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.hospital-list {
  display: flex;
  flex-direction: column;
}

.hospital-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.hospital-item:last-child {
  border-bottom: none;
}

.hospital-avatar-container {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 50%;
  overflow: hidden;
}

.hospital-avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hospital-info {
  flex: 1;
}

.hospital-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.hospital-rating {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.rating-stars {
  display: flex;
  margin-left: 8rpx;
}

.navigation-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
}

.nav-icon {
  width: 60rpx;
  height: 60rpx;
}

.nav-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 登录弹窗样式 */
.login-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
}

.login-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.login-btn {
  margin-bottom: 20rpx;
}

.login-cancel {
  color: #666;
  font-size: 28rpx;
}
