/* pages/coupon/index.wxss */

/* 页面整体样式 */
.coupon-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 选项卡样式 */
.custom-tabs {
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
}

.custom-tabs-content {
  padding: 0 30rpx;
}

/* 优惠券列表容器 */
.coupon-list-container {
  padding: 24rpx;
}

/* 优惠券列表 */
.coupon-list {
  margin-top: 16rpx;
}

/* 优惠券卡片样式 */
.coupon-item {
  display: flex;
  position: relative;
  background-color: #ffffff;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  overflow: hidden;
}

/* 波浪边框 */
.coupon-divider {
  position: absolute;
  left: 188rpx;
  top: 0;
  bottom: 0;
  width: 20rpx;
  background-image: radial-gradient(circle at 10rpx 10rpx, #f5f5f5 6rpx, #ffffff 6rpx);
  background-size: 20rpx 20rpx;
}

/* 优惠券左侧 */
.coupon-left {
  flex: 0 0 190rpx;
  background-color: #FA4126;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  box-sizing: border-box;
}

/* 优惠券金额 */
.coupon-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 10rpx;
}

.coupon-amount .unit {
  font-size: 32rpx;
  font-weight: 500;
}

.coupon-amount .number {
  font-size: 60rpx;
  font-weight: bold;
  line-height: 1;
}

/* 优惠券使用条件 */
.coupon-condition {
  font-size: 22rpx;
  text-align: center;
  line-height: 1.2;
  white-space: nowrap;
  max-width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 优惠券右侧 */
.coupon-right {
  flex: 1;
  padding: 24rpx 20rpx;
  position: relative;
}

/* 优惠券名称 */
.coupon-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  padding-right: 60rpx;
}

/* 优惠券描述 */
.coupon-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 优惠券日期 */
.coupon-date {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 10rpx;
}

/* 使用按钮 */
.coupon-btn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  background-color: #FA4126;
  color: #fff;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
}

/* 优惠券状态标签 */
.coupon-status {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.coupon-status image {
  width: 80rpx;
  height: 80rpx;
}

/* 已失效优惠券 */
.coupon-item.disabled .coupon-left {
  background-color: #BBBBBB;
}

.coupon-item.disabled {
  opacity: 0.8;
}

/* 加载中 */
.coupon-loading {
  display: flex;
  justify-content: center;
  margin-top: 100rpx;
}

/* 空状态 */
.coupon-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-img {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 标签导航栏 */
.tab-navbar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.tab-item.active {
  color: #000;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;  /* 微信绿色 */
  border-radius: 2rpx;
}